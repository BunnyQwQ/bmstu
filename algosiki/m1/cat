#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
char* cat(char** s, int n)
{
	int lenres = 1;
	for (int i = 0; i < n; i++)
	{
		lenres += strlen(s[i]);
	}
	char* result = (char*)malloc(lenres * sizeof(char));
	int ind = 0;
	for (int i = 0; i < n; i++)
	{
		int len = strlen(s[i]);
		memcpy(result + ind, s[i], len);
		ind += len;
	}

	result[lenres - 1] = '\0';

	return result;
}
int main()
{
	int n;
	printf("Введите n:\n");
	scanf("%d", &n);
	getchar();
	char** ar = (char**)malloc(n * sizeof(char*));
	printf("Введите строки:\n");
	for (int i = 0; i < n; i++)
	{
		char buf[50];
		fgets(buf, 50, stdin);
		
		char * pn = strrchr(buf, '\n');
		*pn = '\0';
		ar[i] = (char*)malloc((strlen(buf) + 1)* sizeof(char));
		strcpy(ar[i], buf);
	}
	printf("%s",cat(ar, n));
	return 0;
}
