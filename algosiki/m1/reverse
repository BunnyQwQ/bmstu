#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
void swap(char* ptr1, char* ptr2, size_t w)
{
	for (int i = 0; i < w; i++)
	{
		char temp = *(ptr1+i);
		*(ptr1+i) = *(ptr2+i);
		*(ptr2+i) = temp;
	}
}
void reverse(void* ar, int len, size_t w)
{
	for (int i = 0; i < len / 2; i++) swap((char*)ar + i*w, (char*)ar + (len - i - 1)*w,w);
}


int main()
{
	int len;
	int width;
	printf("Введите длину массива и размер элементов:\n");
	scanf("%d %d", &len, &width);
	char* ar = (char*)calloc(len,width);

	getchar();
	printf("Введите массив по байтово:\n");
	for (int i = 0; i < len * width; i++)
	{
		*(ar+i)=getchar();
	}
	reverse(ar,len,width);
	for (int i = 0; i < len * width; i++) printf("%c", *(ar + i));
	
}
