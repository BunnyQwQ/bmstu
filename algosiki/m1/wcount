#include <stdio.h>
#include <string.h>
int wcount(char* s)
{
	int n = 0;
	if (*s != ' ') n++;
	for (int i = 1; i < strlen(s); i++)
	{
		if (s[i] != ' ' && s[i - 1] == ' ') n++;
	}


	return n;
}
int main()
{
	printf("Введите строку:\n");
	char s[1000];
	fgets(s,1000,stdin);
	char* pn = strrchr(s, '\n'); *pn = '\0';
	if (strlen(s) > 0)
		printf("%d", wcount(s));
	else printf("0");
}
