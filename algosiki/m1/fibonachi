#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    int n;
    scanf("%d", &n);
    if (n == 0) printf("0fib");
    else if (n == 1) printf("1fib");
    else
    {
        int fib[50] = { 0 };
        fib[0] = 1;
        fib[1] = 2;
        int i = 2;
        while (fib[i - 1] + fib[i - 2] <= n) { fib[i] = fib[i - 1] + fib[i - 2]; i++; }

        i--;
        for (int j = i; j >= 0; j--)
        {
            if (n >= fib[j]) { printf("1"); n -= fib[j];}
            else {
                printf("0");
            }


        }
       
    }
    return 0;
}
