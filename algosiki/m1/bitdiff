#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int bitdif(char *str1,char *str2)
{
    for (int i = 0; str1[i] != '\0' || str2[i] != '\0';i++)
    {
        if (str1[i] != str2[i])
        {
            char dif = str1[i] ^ str2[i];
            for (int j = 0; j < 8; j++)
                if (dif & (1 << j)) return i * 8 + j;
        }
    }
    return -1;
}






int main()
{
    char str1[100];
    char str2[100];
    printf("Введите две строки для сравнения:\n");
    scanf("%s\n%s", str1, str2);
    printf("%d", bitdif(str1,str2));
}
