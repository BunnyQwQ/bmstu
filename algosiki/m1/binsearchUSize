// здесь по выебонски! все на свой страх и риск
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include <stdlib.h>
int srav(char* ptr1, char* ptr2, int width)
{
    for (int j = 0; j < width; j++)
    {
        if (*(ptr1 + j) > *(ptr2 + j)) {
            return 1;
        }
        if (*(ptr1 + j) < *(ptr2 + j)) {
            return -1;
        }
    }
    return 0;
}
int binary_search(char* a, int n, char* k, int width)
{
    
    int start = 0, end = n - 1;
    int mid;
    while (start <= end)
    {
        mid = start + ((end - start) / 2);
        if (srav(k,a+mid*width,width) == 0)
        {
            return mid;
        }

        else if (srav(k, a + mid * width, width) == -1)
        {
            end = mid - 1;
        }
        else if (srav(k, a + mid * width, width) == 1)
        {
            start = mid + 1;
        }
    }
    return -1;
}

int main()
{

    int n,width;
    printf("Введите количество элементов и размер каждого элемента:\n");
    scanf("%d %d", &n,&width);
    char* arr = (char*)malloc(n*width);
    getchar();
    printf("Введите элементы:\n");
    for (int i = 0; i < n * width;i++) scanf("%c", arr + i);
    getchar();
    char* data = (char*)malloc(width);
    printf("Введите искомое значение:\n");
    for (int i = 0; i < width; i++) scanf("%c",data+i);

    
    int result = binary_search(arr, 7, data, width);

    if (result != -1)
    {
        printf("\nЭлемент найден ind: %d\n", result);
    }
    else
    {
        printf("\nЭлемент не найден");
    }

    return 0;
}

